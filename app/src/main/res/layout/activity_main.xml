<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_gradient_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="48dp">

    <!-- Logo Container with Animation -->
    <RelativeLayout
        android:id="@+id/logoContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp">

        <!-- Background Circle with Pulse Animation -->
        <View
            android:id="@+id/logoPulseCircle"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:alpha="0.3"
            android:background="@drawable/circle_pulse_background" />

        <!-- Main Logo Circle -->
        <ImageView
            android:id="@+id/logoBackground"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/logo_circle_background"
            android:elevation="4dp" />

        <!-- Logo Icon/Letter -->
        <TextView
            android:id="@+id/logoIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/poppins"
            android:text="O"
            android:textColor="@color/colorOnPrimary"
            android:textSize="42sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- App Name with Typewriter Animation -->
    <LinearLayout
        android:id="@+id/appNameContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/appNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:fontFamily="@font/poppins"
            android:letterSpacing="0.05"
            android:text="Opinnio"
            android:textColor="@color/colorOnPrimary"
            android:textSize="36sp"
            android:textStyle="bold" />

        <!-- Animated Cursor -->
        <View
            android:id="@+id/typingCursor"
            android:layout_width="3dp"
            android:layout_height="36dp"
            android:layout_marginStart="4dp"
            android:alpha="0"
            android:background="@color/colorOnPrimary" />

    </LinearLayout>

    <!-- Tagline -->
    <TextView
        android:id="@+id/taglineText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:alpha="0"
        android:letterSpacing="0.1"
        android:text="Share Your Voice"
        android:textColor="@color/colorOnPrimary"
        android:textSize="16sp" />

    <!-- Loading Section -->
    <LinearLayout
        android:id="@+id/loadingContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Custom Progress Bar -->
        <ProgressBar
            android:id="@+id/loadingProgressBar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorOnPrimary" />

        <!-- Loading Text -->
        <TextView
            android:id="@+id/loadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:text="Loading..."
            android:textColor="@color/colorOnPrimary"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Floating Elements for Visual Enhancement -->
    <View
        android:id="@+id/floatingDot1"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="-200dp"
        android:alpha="0.6"
        android:background="@drawable/floating_dot" />

    <View
        android:id="@+id/floatingDot2"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginTop="-150dp"
        android:layout_marginEnd="80dp"
        android:alpha="0.4"
        android:background="@drawable/floating_dot" />

    <View
        android:id="@+id/floatingDot3"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginStart="-120dp"
        android:layout_marginTop="100dp"
        android:alpha="0.5"
        android:background="@drawable/floating_dot" />

</LinearLayout>


